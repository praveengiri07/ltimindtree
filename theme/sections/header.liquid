<header class="header header-main">
  <h1><a href="{{ routes.root_url }}" class="header__heading-link ">
    {%- if shop.brand.logo != blank -%}
      <div class="header__heading-logo-wrapper">
        <!-- <img src="{{ shop.brand.logo | split: '/' | last | file_url  }}" alt="{{ shop.name }}" itemprop="logo" width="300" height="auto"> -->
        {{ shop.brand.logo | image_url: width: 200 | image_tag: class: 'header__heading-logo motion-reduce', preload: true }}
      </div>
    {%- else -%}
      <span class="h2">{{ shop.name }}</span>
    {%- endif -%}
  </a>
  </h1>

  <ul class="main-menu">
    {% for link in linklists.main-menu.links -%}
      <li>{{ link.title | link_to: link.url }}</li>
    {%- endfor %}

    {% if settings.show_search %}
      <li>
        <form action="/search">
          <input type="search" name="q" />
          <button type="submit">Search</button>
        </form>
      </li>
    {% endif %}
  </ul>
</header>

{% schema %}
{
  "name": "t:sections.header.name",
  "class": "section-header"
}
{% endschema %}