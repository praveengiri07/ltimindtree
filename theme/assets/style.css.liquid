body {
    background-color: {{ settings.bg }};
    color: {{ settings.text_color }};
    font-family: 'frutiger',Roboto,Arial,sans-serif;
    min-height: 100%;
}

html, body {
    min-height: 100%
}

body {
    padding-bottom: 88px;
}

footer {
    position: absolute;
    width: 100%;
    height: 88px;
}

header.header.header-main {
    display: flex;
    width: 100%;
    justify-content: space-around;
    background-color: {{ settings.bg }};
}

.main-menu {
    display: inline;
    margin-top: 1.5em;
}

.main-menu li {
    display: inline-block;
    margin-left: 20px;
}

.main-menu li a {
    color: {{ settings.text_color }};
    font-size: 1em;
    text-decoration: none;
}

.main-menu li a:hover,
.main-menu li a:active {
    opacity: 0.8;
}

.footer__content-bottom {
    text-align: center;
    position: absolute;
    top: 20px;
    width: 100%;
    height: 30px;
}

.footer__content-bottom a {
    color: {{ settings.text_color }};
    text-decoration: none;
}

.collection-title {
    text-align: center;
}

.collection,
.container {
    display: block;
    max-width: 900px;
    margin: auto;
    padding-bottom: 50px;
}

.row.collection-row {
    display: inline-block;
}

.row.collection-row .collection-product {
    width: 45%;
    float: left;
    padding: 2.5%;
}

.row.collection-row .collection-product a {
    color: {{ settings.text_color }};
    text-decoration: none;
}

.row.collection-row .collection-product a:hover, .row.collection-row .collection-product a:active {
    opacity: 0.8;
}

.row.collection-row .collection-product img {
    width: 100%;
    text-align: center;
    margin: auto;
    position: relative;
}

.cart-item {
    display: flex;
    padding: 10px;
    background: #0b1329;
    margin-bottom: 20px;
}

.cart-item .img {
    width: 50%;
    text-align: center;
}

.cart-item .desc {
    width: 50%;
    padding: 10px;
}

.cart-item .desc input {
    width: 50px;
}

.cart-item .desc a {
    color: {{ settings.text_color }};
    text-decoration: none;
}

.cart-item .desc h2 {
    margin-top: 5px;
}

.cart-final-details {
    text-align: center;
    padding-bottom: 80px;
}

.cart-screen a {
    color: {{ settings.text_color }};
}

form#contact_form {
    max-width: 600px;
    text-align: center;
    margin: auto;
}

form#contact_form label {
    width: 30%;
    display: inline-block;
    vertical-align: top;
}

input:not([type="submit"]),
textarea {
    width: 65%;
    min-height: 30px;
    margin-bottom: 20px;
}

.pagination {
    text-align: center;
    margin: auto;
}

.pagination a {
    text-align: center;
    color: {{ settings.text_color }};
    text-decoration: none;
}

.pagination .page.current {
    font-weight: bold;
    color: #FBD20D;
}

select, input, button {
    min-height: 30px;
    border-radius: 4px;
    border: 1px solid #FBD20D;
}

select#sort-by {
    margin-left: 2.5%;
}

.container.featured-product {
    text-align: center;
    margin: auto;
}

.featured-product .row.collection-row .collection-product {
    width: 100%;
}


@media screen and (max-width: 768px) {
    .row.collection-row .collection-product {
        width: 95%;
        text-align: center;
    }

    .collection, .container {
        max-width: 95%;
    }

    header.header.header-main,
    .cart-item {
        display: block;
        text-align: center;
    }

    .cart-item .desc,
    .cart-item .img {
        width: 100%;
    }
}

@media screen and (min-width: 1440px) {
    .row.collection-row .collection-product {
        width: 28%;
    }

    .collection, .container {
        max-width: 1300px;
    }
}